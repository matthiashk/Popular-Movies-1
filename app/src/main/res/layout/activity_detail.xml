<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.mycompany.popularmovies.DetailActivity">

        <TextView
            android:id="@+id/details_movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="40dp"
            android:textSize="28sp"
            android:layout_below="@+id/details_user_rating"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="208dp"
            android:paddingTop="@dimen/detail_label_padding_top" />

        <TextView
            android:id="@+id/details_plot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/details_movie_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/details_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/details_plot" />

        <TextView
            android:id="@+id/details_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_label_text_size"
            android:layout_below="@+id/details_release_date_label"
            android:layout_toRightOf="@+id/details_imageview"
            android:layout_toEndOf="@+id/details_imageview"
            android:paddingTop="@dimen/detail_label_padding_top"
            android:paddingLeft="@dimen/detail_label_padding_left" />

        <TextView
            android:id="@+id/details_user_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_label_text_size"
            android:layout_below="@+id/details_user_rating_label"
            android:layout_toRightOf="@+id/details_imageview"
            android:layout_toEndOf="@+id/details_imageview"
            android:paddingTop="@dimen/detail_label_padding_top"
            android:paddingLeft="@dimen/detail_label_padding_left" />

        <TextView
            android:id="@+id/details_release_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_label_text_size"
            android:text="@string/detail_release_date_label"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/details_imageview"
            android:layout_toEndOf="@+id/details_imageview"
            android:paddingLeft="@dimen/detail_label_padding_left"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/details_user_rating_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_label_text_size"
            android:text="@string/detail_user_rating_label"
            android:layout_below="@+id/details_release_date"
            android:layout_toRightOf="@+id/details_imageview"
            android:layout_toEndOf="@+id/details_imageview"
            android:paddingTop="@dimen/detail_label_padding_top"
            android:paddingLeft="@dimen/detail_label_padding_left" />

    </RelativeLayout>

</ScrollView>